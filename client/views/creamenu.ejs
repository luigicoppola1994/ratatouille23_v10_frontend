  </head>
  <body>
    <div id="menu">
        <div id="categories"></div>
        <div id="items"></div>
      </div>
      



<script>
// Seleziona gli elementi HTML
const categoriesContainer = document.getElementById("categories");
const itemsContainer = document.getElementById("items");

// Crea un array delle categorie presenti
const categories = [];
data.forEach(item => {
  if (item.categoryId && !categories.includes(item.categoryId)) {
    categories.push(item.categoryId);
  }
});

// Crea i pulsanti per selezionare la categoria
categories.forEach(category => {
  const button = document.createElement("button");
  button.innerText = `Categoria ${category}`;
  button.addEventListener("click", () => {
    // Filtra gli oggetti per la categoria selezionata
    const items = data.filter(item => item.categoryId === category);
    // Visualizza gli oggetti nella sezione "items"
    itemsContainer.innerHTML = "";
    items.forEach(item => {
      const div = document.createElement("div");
      div.innerHTML = `
        <h3>${item.name}</h3>
        <p>${item.description}</p>
        <p>Costo: ${item.cost} euro</p>
      `;
      itemsContainer.appendChild(div);
    });
  });
  categoriesContainer.appendChild(button);
});

    
</script>








